<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/account.css" />
    <title>Đăng nhập vào PulseTalk</title>
  </head>
  <body>
    <main class="login-container">
      <h1 class="logo"><img src="/Logo500px.png" alt="" srcset="" /></h1>
      <form id="" class="login-form">
        <div class="form-group">
          <div class="input-container">
            <label for="username">Tên đăng nhập</label>
            <input
              type="text"
              id="username"
              name="username"
              placeholder="Tên đăng nhập"
            />

          </div>
        </div>
        <div class="form-group">
          <div class="input-container">
            <label for="password">Mật khẩu</label>
            <input
              type="password"
              id="password"
              name="password"
              placeholder="Mật khẩu"
              required
            />
            <button class="show-pass" type="button">O</button>
          </div>
        </div>
        <div class="form-group">
          <button class="submit" type="submit">Đăng nhập</button>
          <a class="forgot" href="http://google.com">Quên mật khẩu?</a>
        </div>
      </form>
      <div class="register-link">
        <a href="/register"><button class="register">Đăng ký</button></a>
      </div>

    </main>
  </body>
</html>